<div ng-controller='BlogCtrl'
     class='main-container' id="{{ page }}"
     ng-style="{'background-image':'url(' + activePost.image_url + ')'}">
    <%= render partial: 'shared/navbar', locals: { nav_buttons: ['cv', 'profile', 'portfolio'] } %>
    <div id="blog-body-container">
        <h1>{{ activePost.title }}</h1>
    </div>
    <div id="posts-list-wrapper">
        <div class="frame" id="posts-list">
            <ul class="slidee">
                <%= @posts.each do |post| %>
                    <li style=<%="background-image:url(" + asset_path(post[:cover_image])  + ")"%> >
                        <div class="title"><%= post[:title] %></div>
                        <div class="date"><%= post[:date] %></div>
                        <%= image_tag post[:cover_image], hidden: true %>
                    </li>
                <% end %>
                <li id="end"></li>
            </ul>
        </div>
    </div>
</div>
