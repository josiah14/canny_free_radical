<div ng-controller='NewPostCtrl' id="{{ page }}}">
    <div ui-layout="{ flow: 'column' }">
        <div ui-layout-container id='left-new-post-split'>
            <div class='row'>
                <div class='span12'>
                    <form class='form-horizontal'>
                        <fieldset>
                            <h1 class='text-center'>New Post</h1>
                            <hr>
                            <div class='control-group text-center' id='new-post-content'>
                                <label class='control-label'>Title</label>
                                <input class='form-control' id='new-post-title' ng-model='newPost.title'>
                                <label class='control-label'>Post Markdown</label>
                                <textarea class='form-control' id='new-post-markdown' rows='20' ng-model='newPost.content'></textarea>
                                <label class='control-label'>Image File</label>
                                <input class='form-control' type='file' accept='image/*' id='new-post-image-path' ng-model='newPost.imagePath'>
                                <hr>
                                <button class='btn btn-primary' id='submit-new-post' ng-click='submitPost()'>
                                    <h4><b>Submit</b></h4>
                                </button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
        <div ui-layout-container="central">
            <p id='new-post-markdown' marked='newPost.content'></p>
        </div>
    </div>
</div>
